<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>mik.prog4.zh1.servlet.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/mainServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>mik.prog4.zh1.servlet.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/listServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddPetServlet</servlet-name>
        <servlet-class>mik.prog4.zh1.servlet.AddPetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddPetServlet</servlet-name>
        <url-pattern>/addPetServlet</url-pattern>
    </servlet-mapping>

    <listener>
        <description>ProjectServletContextListener</description>
        <listener-class>mik.prog4.zh1.listener.ProjectServletContextListener</listener-class>
    </listener>

    <listener>
        <description>RequestListener</description>
        <listener-class>mik.prog4.zh1.listener.RequestListener</listener-class>
    </listener>

</web-app>
